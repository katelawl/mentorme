<%= simple_form_for(@mentor_profile) do |f| %>
  <%= f.error_notification %>
  <div class="color-back">
  <div class="form-inputs">
    <%= f.input :company %>
    <%= f.input :jobtitle, label:"Job Title" %>
    <%= f.input :yearsofexperience, label:"Years of Experience" %>
   <%= f.collection_check_boxes :interest, [[0, "HR"],[0, "Technology"]], :first, :last %>

  </div>

  <div class="form-actions text-center">
    <%= f.button :submit %>
  </div>
</div>
<% end %>

